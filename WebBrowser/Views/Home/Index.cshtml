            </div>
            <div class="modal-body">
                Bạn cần đăng nhập để xem nội dung phim này.
            </div>
            <div class="modal-footer border-0">
                <a class="btn btn-primary" asp-controller="Auth" asp-action="Index">
                    <i class="bi bi-box-arrow-in-right me-1"></i>Đăng nhập ngay
                </a>
                <button type="button" class="btn btn-outline-light" data-bs-dismiss="modal">Để sau</button>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    <script>
        // NEW: trạng thái đăng nhập sinh ra từ Razor (boolean literal)
        const isLoggedIn = @isLoggedIn.ToString().ToLower();

        // Popovers cho chips (giữ nguyên)
        document.querySelectorAll('[data-bs-toggle="popover"]')
          .forEach(el => new bootstrap.Popover(el));

        // Hiệu ứng light theo chuột ở hero (giữ nguyên)
        const hero = document.getElementById('hero');
        hero?.addEventListener('mousemove', (e)=>{
          const r = hero.getBoundingClientRect();
          hero.style.setProperty('--x', ((e.clientX - r.left)/r.width*100).toFixed(2)+'%');
          hero.style.setProperty('--y', ((e.clientY - r.top)/r.height*100).toFixed(2)+'%');
        });

        // NEW: helper mở modal
        function showLoginModal() {
            const modalEl = document.getElementById('loginRequiredModal');
            if (window.bootstrap && modalEl) {
                const modal = bootstrap.Modal.getOrCreateInstance(modalEl);
                modal.show();
            } else {
                alert('Bạn cần đăng nhập để xem nội dung phim này.');
            }
        }

        // NEW: gắn handler cho các phần tử "phát" trong thẻ phim
        // - .play-btn: nút phát trong overlay
        // - .poster: ảnh poster
        // Bạn có thể mở rộng selector nếu có thêm anchor/link khác.
        const clickableSelectors = [
            '.movie-card .play-btn',
            '.movie-card .poster'
        ];

        document.querySelectorAll(clickableSelectors.join(',')).forEach(el => {
            el.addEventListener('click', (e) => {
                // Nếu chưa đăng nhập thì chặn và hiện modal
                if (!isLoggedIn) {
                    e.preventDefault();
                    e.stopPropagation();
                    showLoginModal();
                }
                // Nếu đã đăng nhập, bạn để link href của nút/ảnh trỏ đến trang xem phim chi tiết
            });
        });

        // (Tuỳ chọn) Nếu bạn muốn cả "card" cũng bị chặn khi click:
        document.querySelectorAll('.movie-card').forEach(card => {
            card.addEventListener('click', (e) => {
                if (!isLoggedIn) {
                    e.preventDefault();
                    e.stopPropagation();
                    showLoginModal();
                }
            });
        });
    </script>
}

