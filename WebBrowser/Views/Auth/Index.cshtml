@{
    ViewData["Title"] = "Đăng nhập";
    var returnUrl = Context?.Request?.Query["returnUrl"].ToString() ?? "/";

    var token = Context.Session.GetString("JWToken");
    var isLoggedIn = !string.IsNullOrEmpty(token);
}



    <!-- Bootstrap 5 -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- jQuery -->
    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>

    <style>
        body { background: #f6f7fb; }
        .login-card {
            max-width: 420px; margin: 6vh auto;
            border: 0; border-radius: 1rem;
            box-shadow: 0 10px 25px rgba(0,0,0,.08);
        }
        .btn-wide { min-width: 160px; }
        .form-floating > label { color: #6c757d; }
        .brand { font-weight: 700; letter-spacing: .3px; }
        .toggle-pass { cursor: pointer; user-select: none; }
    </style>

    <div class="container">
        <div class="card login-card">
            <div class="card-body p-4 p-md-5">
                <div class="text-center mb-4">
                    <div class="brand h4 mb-1">Tài khoản</div>
                    <div class="text-muted">Đăng nhập để tiếp tục</div>
                </div>

                <div id="msgBox" class="alert d-none" role="alert"></div>

                <form id="loginForm" autocomplete="on">
                    @Html.AntiForgeryToken()

                    <div class="form-floating mb-3">
                        <input type="email" class="form-control" id="username" placeholder="name@example.com" required>
                        <label for="username">Email</label>
                    </div>

                    <div class="form-floating mb-2">
                        <input type="password" class="form-control" id="password" placeholder="••••••••" required>
                        <label for="password">Mật khẩu</label>
                    </div>

                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" id="showPass">
                            <label class="form-check-label toggle-pass" for="showPass">Hiện mật khẩu</label>
                        </div>
                        <a class="small text-decoration-none" href="#">Quên mật khẩu?</a>
                    </div>

                    <div class="d-grid">
                        <button id="btnLogin" type="submit" class="btn btn-primary btn-wide">
                            <span class="spinner-border spinner-border-sm me-2 d-none" id="btnSpinner" role="status" aria-hidden="true"></span>
                            Đăng nhập
                        </button>
                    </div>
                </form>

                <div class="text-center mt-4">
                    <span class="text-muted small">Chưa có tài khoản?</span>
                    <a href="#" class="small">Đăng ký</a>
                </div>
            </div>
        </div>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

    <script>
        (function () {
            const $form = $("#loginForm");
            const $btn = $("#btnLogin");
            const $spin = $("#btnSpinner");
            const $msg = $("#msgBox");
            const returnUrl = "@returnUrl";

            // toggle password
            $("#showPass").on("change", function () {
                const type = this.checked ? "text" : "password";
                $("#password").attr("type", type);
            });

            function showMsg(text, type) {
                $msg.removeClass("d-none alert-success alert-danger alert-warning")
                    .addClass("alert-" + type).text(text);
            }
            function resetMsg() {
                $msg.addClass("d-none").text("");
            }
            function setBusy(busy) {
                $btn.prop("disabled", busy);
                $spin.toggleClass("d-none", !busy);
            }

            $form.on("submit", function (e) {
                e.preventDefault();
                resetMsg();

                const username = $("#username").val().trim();
                const password = $("#password").val();

                if (!username || !password) {
                    showMsg("Vui lòng nhập đầy đủ email và mật khẩu.", "warning");
                    return;
                }

                setBusy(true);

                // Lấy AntiForgery token (nếu bạn bật ValidateAntiForgeryToken ở action POST)
                const anti = $('input[name="__RequestVerificationToken"]').val();

                $.ajax({
                    url: "/auth/login",             // action POST bạn đã tạo
                    type: "POST",
                    contentType: "application/json; charset=utf-8",
                    headers: anti ? { "RequestVerificationToken": anti } : {},
                    data: JSON.stringify({ username, password }),
                    success: function (res) {
                        // res theo CResponseMessage: { success, code, message, data }
                        const ok = res && (res.success === true || res.code === "200");
                        if (ok) {
                            showMsg("Đăng nhập thành công. Đang chuyển trang...", "success");
                            // Server của bạn đã lưu JWToken vào Session trong action
                            setTimeout(function () {
                                window.location.href = returnUrl || "/";
                            }, 600);
                        } else {
                            showMsg(res?.message || "Đăng nhập thất bại.", "danger");
                        }
                    },
                    error: function (xhr) {
                        const text = xhr?.responseJSON?.message || xhr?.responseText || "Lỗi kết nối máy chủ.";
                        showMsg(text, "danger");
                    },
                    complete: function () {
                        setBusy(false);
                    }
                });
            });
        })();
    </script>

