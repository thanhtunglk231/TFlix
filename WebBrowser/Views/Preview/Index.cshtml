@using WebBrowser.Models.Preview
@model PreviewItem

@{
    Layout = "/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Preview · Trang phim";

    // Trạng thái đăng nhập (ví dụ đọc từ Session)
    var token = Context.Session.GetString("JWToken");
    var isLoggedIn = !string.IsNullOrEmpty(token);

    // ===== MAP TỪ MODEL =====
    var poster = Model?.PrimaryPosterUrl
                 ?? Model?.PrimaryThumbUrl
                 ?? "https://placehold.co/400x600?text=No+Poster";

    var title = Model?.title ?? "Đang cập nhật";
    var original = Model?.OriginalTitle;
    var year = Model?.ReleaseOrAirDate?.Year;

    var country = Model?.CountryName
                  ?? Model?.CountryCode
                  ?? "Đang cập nhật";

    var genres = Model?.genres ?? "Đang cập nhật";

    var lang = Model?.LanguageName
               ?? Model?.LanguageCode
               ?? "Đang cập nhật";

    var duration = Model?.DurationMin != null
        ? $"{Model.DurationMin} phút"
        : "Đang cập nhật";

    // nếu phim lẻ thì cho là 1 tập
    var episodeCount = 1;

    var status = Model?.status ?? "Đang cập nhật";

    // tạm thời chưa có rating từ SP
    var rating = 0.0;

    var description = Model?.OverviewText ?? "Chưa có nội dung mô tả.";

    var tags = (Model?.genres ?? "")
        .Split(',', StringSplitOptions.RemoveEmptyEntries | StringSplitOptions.TrimEntries);

    var schedule = ""; // nếu sau này có lịch chiếu thì map thêm
}

@section Styles {
    <style>
        :root {
            --brand: #27d3c3;
            --brand2: #19b3a5;
            --panel: #12161a;
            --muted: #a9b7c4;
        }

        .wrap {
            background: #0e1114;
        }

        .crumb a {
            color: #cfdbe6;
            text-decoration: none
        }

            .crumb a:hover {
                color: #fff;
                text-decoration: underline
            }

        .panel {
            background: var(--panel);
            border: 1px solid rgba(255,255,255,.08);
            border-radius: 14px;
        }

        .panel-h {
            padding: .8rem 1rem;
            border-bottom: 1px solid rgba(255,255,255,.06);
            font-weight: 600
        }

        .panel-b {
            padding: 1rem;
        }

        .meta dt {
            color: #cfe7f6;
            width: 120px
        }

        .meta dd {
            color: #e8f3fb;
            margin-bottom: .4rem;
        }

        .star {
            color: #ffc107
        }

        .btn-grad {
            background: linear-gradient(135deg,var(--brand),var(--brand2));
            border: none
        }

        .chip {
            display: inline-flex;
            align-items: center;
            gap: .45rem;
            padding: .4rem .7rem;
            border-radius: 14px;
            background: #14181c;
            border: 1px solid rgba(255,255,255,.08);
            color: #dbe6ee;
            text-decoration: none
        }

            .chip i {
                color: var(--brand)
            }

            .chip:hover {
                border-color: var(--brand);
                color: #fff
            }

        .pill {
            background: #14181c;
            color: #e6f0f7;
            border: 1px solid rgba(255,255,255,.08);
            padding: .35rem .7rem;
            border-radius: 10px;
        }

            .pill:hover {
                border-color: var(--brand)
            }

        .slist .item {
            display: flex;
            gap: .6rem;
            padding: .5rem;
            border-radius: 10px
        }

            .slist .item:hover {
                background: #14181c
            }

        .thumb {
            width: 62px;
            height: 86px;
            border-radius: 8px;
            object-fit: cover
        }

        .cmt-head {
            display: flex;
            align-items: center;
            gap: .5rem
        }

            .cmt-head img {
                width: 36px;
                height: 36px;
                border-radius: 50%
            }

        .label {
            color: var(--muted)
        }
    </style>
}

<div class="wrap py-3">
    <div class="container">

        <!-- Breadcrumb -->
        <nav class="crumb small mb-3">
            <a asp-controller="Home" asp-action="Index">MỘT CHILL</a> /
            <a href="#">@genres</a> /
            <span class="text-secondary" id="bcTitle">@title</span>
        </nav>

        <div class="row g-4">
            <!-- LEFT -->
            <div class="col-12 col-lg-8">
                <div class="panel p-3">
                    <div class="row g-3">
                        <div class="col-12 col-md-4">
                            <img id="poster" src="@poster" alt="@title" class="w-100 rounded-3" />
                            <div class="d-grid gap-2 mt-3">
                                <a href="javascript:void(0)" class="btn btn-grad btn-lg btnWatch">
                                    <i class="bi bi-play-fill me-1"></i>Xem phim
                                </a>
                                <a href="#" class="btn btn-outline-light btn-lg">
                                    <i class="bi bi-download me-1"></i>Tải phim
                                </a>
                            </div>
                        </div>
                        <div class="col-12 col-md-8">
                            <div class="d-flex align-items-center gap-2 flex-wrap">
                                <h1 id="title" class="h4 mb-0">@title</h1>
                                @if (!string.IsNullOrEmpty(original))
                                {
                                    <span id="original" class="text-secondary">(@original)</span>
                                }
                            </div>

                            <div id="yearGenres" class="label mt-1">
                                @if (year.HasValue)
                                {
                                    @year.Value
                                    @: • @genres
                                }
                                else
                                {
                                    @genres
                                }
                            </div>

                            <!-- Meta -->
                            <dl class="row meta mt-3">
                                <dt class="col-sm-4">Thời lượng</dt>
                                <dd id="duration" class="col-sm-8">@duration</dd>

                                <dt class="col-sm-4">Số tập</dt>
                                <dd id="episodeCount" class="col-sm-8">@episodeCount tập</dd>

                                <dt class="col-sm-4">Tình trạng</dt>
                                <dd id="status" class="col-sm-8">@status</dd>

                                <dt class="col-sm-4">Ngôn ngữ</dt>
                                <dd id="lang" class="col-sm-8">@lang</dd>

                                <dt class="col-sm-4">Quốc gia</dt>
                                <dd id="country" class="col-sm-8">@country</dd>

                                <dt class="col-sm-4">Thể loại</dt>
                                <dd id="genresText" class="col-sm-8">@genres</dd>

                                <dt class="col-sm-4">Diễn viên</dt>
                                <dd id="casts" class="col-sm-8">tungdptrai</dd>

                                <dt class="col-sm-4">Đánh giá</dt>
                                <dd class="col-sm-8">
                                    <span class="star"><i class="bi bi-star-fill"></i></span>
                                    <b id="rating">@rating</b> (điểm)
                                </dd>
                            </dl>

                            <div class="d-flex flex-wrap gap-2 mt-2">
                                <button class="btn btn-outline-light btn-sm">
                                    <i class="bi bi-plus-circle me-1"></i>Thêm vào danh sách
                                </button>
                                <button class="btn btn-outline-light btn-sm">
                                    <i class="bi bi-flag me-1"></i>Báo lỗi
                                </button>
                            </div>
                        </div>
                    </div>

                    <!-- Latest episodes (hiện demo) -->
                    <div class="mt-3">
                        <div class="panel-h">TẬP MỚI NHẤT :</div>
                        <div id="latestWrap" class="panel-b d-flex flex-wrap gap-2">
                            <a href="javascript:void(0)" class="pill btnEp">Tập 1</a>
                        </div>
                    </div>

                    <!-- Description -->
                    <div class="mt-3">
                        <div class="panel-h">NỘI DUNG PHIM</div>
                        <div class="panel-b">
                            <p class="mb-2" id="description">@description</p>
                            <ul class="mb-0" id="descLinks">
                                <li><a href="javascript:void(0)" class="btnEp">- @title tập 1</a></li>
                            </ul>
                        </div>
                    </div>

                    <!-- Tags -->
                    <div class="mt-3">
                        <div class="panel-h">Tags</div>
                        <div class="panel-b d-flex flex-wrap gap-2" id="tagsWrap">
                            @if (tags.Any())
                            {
                                foreach (var t in tags)
                                {
                                    <a href="#" class="chip"><i class="bi bi-hash"></i>@t</a>
                                }
                            }
                            else
                            {
                                <span class="text-secondary">Chưa có tag.</span>
                            }
                        </div>
                    </div>

                    <!-- Schedule + comments (mock) -->
                    <div class="mt-3">
                        <div class="panel-h">
                            LỊCH CHIẾU:
                            <span class="text-warning" id="schedule">
                                @(string.IsNullOrEmpty(schedule) ? "Đang cập nhật" : schedule)
                            </span>
                        </div>
                        <div class="panel-b">
                            <div class="d-flex justify-content-between align-items-center">
                                <div class="fw-semibold">Bình luận</div>
                                <div>
                                    <span class="me-2 label">Sắp xếp theo</span>
                                    <select class="form-select form-select-sm d-inline-block" style="width:auto">
                                        <option>Mới nhất</option>
                                        <option>Cũ nhất</option>
                                        <option>Thích nhiều</option>
                                    </select>
                                </div>
                            </div>

                            <div class="mt-3">
                                <textarea class="form-control mb-3" rows="3" placeholder="Bình luận..."></textarea>

                                <div class="mt-3 small label">
                                    Plugin bình luận (demo). Khi triển khai thật, nhúng FB Comments hoặc hệ thống của bạn.
                                </div>
                            </div>
                        </div>
                    </div>

                </div>
            </div>

            <!-- RIGHT -->
            <div class="col-12 col-lg-4">
                <div class="panel mb-3">
                    <div class="panel-h">PHIM SẮP CHIẾU</div>
                    <div class="panel-b slist">
                        @for (int i = 0; i < 3; i++)
                        {
                            <a class="item text-decoration-none text-light" href="#">
                                <img class="thumb" src="https://picsum.photos/100/140?random=@(400 + i)" alt="thumb" />
                                <div>
                                    <div class="fw-semibold">Phim @i</div>
                                    <div class="small label">2025</div>
                                    <div class="small"><span class="star"><i class="bi bi-star-fill"></i></span> 8.@i</div>
                                </div>
                            </a>
                        }
                    </div>
                </div>

                <div class="panel mb-3">
                    <div class="panel-h">TRENDING</div>
                    <div class="panel-b">
                        <ol class="mb-0 small">
                            <li class="mb-2"><a href="#">@title</a> <span class="label">90 lượt quan tâm</span></li>
                            <li class="mb-2"><a href="#">Cẩm Nguyệt Như Ca</a> <span class="label">54</span></li>
                            <li class="mb-2"><a href="#">Hiên Nguyệt</a> <span class="label">43</span></li>
                            <li class="mb-2"><a href="#">Từ trái Trường An</a> <span class="label">30</span></li>
                            <li><a href="#">Ngự Tư Của Bạo Chúa</a> <span class="label">27</span></li>
                        </ol>
                    </div>
                </div>

                <div class="panel">
                    <div class="panel-h">TỪ KHOÁ NỔI BẬT</div>
                    <div class="panel-b d-flex flex-wrap gap-2" id="hotTags">
                        <a href="#" class="chip"><i class="bi bi-hash"></i> võ thuật</a>
                        <a href="#" class="chip"><i class="bi bi-hash"></i> huyền huyễn</a>
                        <a href="#" class="chip"><i class="bi bi-hash"></i> học đường</a>
                        <a href="#" class="chip"><i class="bi bi-hash"></i> gia đấu</a>
                        <a href="#" class="chip"><i class="bi bi-hash"></i> lãng mạn</a>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>

<!-- Modal yêu cầu đăng nhập -->
<div class="modal fade" id="loginRequiredModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content bg-dark text-light border border-secondary">
            <div class="modal-header border-0">
                <h5 class="modal-title">
                    <i class="bi bi-shield-lock-fill me-2 text-warning"></i>Cần đăng nhập
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">Bạn cần đăng nhập để xem nội dung phim này.</div>
            <div class="modal-footer border-0">
                <a class="btn btn-primary" asp-controller="Auth" asp-action="Index">
                    <i class="bi bi-box-arrow-in-right me-1"></i>Đăng nhập ngay
                </a>
                <button type="button" class="btn btn-outline-light" data-bs-dismiss="modal">Để sau</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        const isLoggedIn = @isLoggedIn.ToString().ToLower();

        function showLoginModal() {
            const el = document.getElementById('loginRequiredModal');
            if (!el) return;
            if (window.bootstrap && bootstrap.Modal) {
                bootstrap.Modal.getOrCreateInstance(el).show();
            } else {
                el.style.display = 'block';
            }
        }

        // Chặn xem phim nếu chưa login
        document.addEventListener('click', function (e) {
            const t = e.target;
            if (!t) return;

            const isBtn =
                t.classList.contains('btnWatch') ||
                t.classList.contains('btnEp');

            if (!isBtn) return;

            if (!isLoggedIn) {
                e.preventDefault();
                e.stopPropagation();
                showLoginModal();
            }
        });
    </script>
}
