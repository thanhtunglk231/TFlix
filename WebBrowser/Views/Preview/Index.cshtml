@@section Scripts {
<script>
    const isLoggedIn = @isLoggedIn.ToString().ToLower(); // true/false

    function getMovieId() {
        const p = new URLSearchParams(window.location.search);
        return p.get('id') || p.get('movieId');
    }

    function setText(id, v) {
        const el = document.getElementById(id);
        if (!el || v === undefined || v === null) return;
        el.textContent = v;
    }

    function setImg(id, url) {
        const el = document.getElementById(id);
        if (el && url) el.setAttribute('src', url);
    }

    function tryParseJson(str) {
        if (typeof str !== 'string' || !str.trim()) return [];
        try { return JSON.parse(str); } catch { return []; }
    }

    function ensureArray(x) {
        return Array.isArray(x) ? x : (x ? [x] : []);
    }

    function normalizeDuration(m1, m2) {
        const m = m1 ?? m2;
        return m ? (m + ' phút') : '';
    }

    function normalizeEpisodeCount(c1, c2) {
        const n = c1 ?? c2;
        return n ? (n + ' tập') : '';
    }

    function renderLatest(items) {
        const wrap = document.getElementById('latestWrap');
        if (!wrap) return;
        wrap.innerHTML = '';
        (items || []).forEach(ep => {
            const label = (typeof ep === 'string')
                ? ep
                : ('Tập ' + ((ep && (ep.episode_no ?? ep.no ?? ep.EpisodeNo)) || ''));
            const a = document.createElement('a');
            a.href = 'javascript:void(0)';
            a.className = 'pill btnEp';
            a.textContent = label;
            wrap.appendChild(a);
        });
    }

    function showLoginModal() {
        const el = document.getElementById('loginRequiredModal');
        if (!el) return;
        // Bootstrap 5
        if (window.bootstrap && bootstrap.Modal) {
            const m = bootstrap.Modal.getOrCreateInstance(el);
            m.show();
        } else {
            // fallback: hiển thị thô
            el.style.display = 'block';
        }
    }

    // Bắt click xem phim (uỷ quyền)
    document.addEventListener('click', function (e) {
        const t = e.target;
        if (!t) return;
        const isBtn = t.classList.contains('btnWatch') || t.classList.contains('btnEp');
        if (!isBtn) return;

        if (!isLoggedIn) {
            e.preventDefault();
            e.stopPropagation();
            showLoginModal();
            return;
        }
        // TODO: điều hướng trang xem
        // window.location = '@Url.Action("Watch", "Movies")' + '?id=' + getMovieId();
    });

    async function getPreviewMovie() {
        const id = getMovieId();
        if (!id) return;

        const url = '@Url.Action("GetMovie", "Preview")' + '?id=' + encodeURIComponent(id);
        try {
            const r = await fetch(url, { cache: 'no-store' });
            if (!r.ok) throw new Error(r.status + ' ' + r.statusText);
            const res = await r.json();
            console.log('GetMovie res:', res);

            // Bắt nhiều biến thể ApiResponse
            const data =
                (res && res.data && res.data.item) ??
                (res && res.data && res.data.movie) ??
                (res && res.data && res.data.table && res.data.table[0]) ??
                (res && res.data && res.data.Table && res.data.Table[0]) ??
                (Array.isArray(res && res.data) ? res.data[0] : null) ??
                res;

            if (!data) { console.warn('Không có dữ liệu phim'); return; }

            const title = data.title || data.Title || '';
            const original = data.original_title || data.OriginalTitle || '';
            const posterUrl = data.poster_url || data.poster || '';
            const overview = data.overview || '';

            const release = data.release_date || data.ReleaseDate;
            const year = (release ? new Date(release).getFullYear() : (data.release_year || ''));

            const genresArr = ensureArray(data.genres ?? data.genres_list ?? tryParseJson(data.genres_json));
            const genresText = (genresArr || []).map(g => (g && (g.name || g.genre_name || g))).filter(Boolean).join(' · ');

            const castArr = ensureArray(data.cast ?? tryParseJson(data.cast_json));
            const castText = (castArr || []).map(p => (p && (p.name || p.full_name))).filter(Boolean).join(' · ');

            let latest = ensureArray(data.latest_episodes);
            if (!latest.length) {
                const eps = ensureArray(data.episodes ?? tryParseJson(data.episodes_json));
                latest = eps.slice(-6).reverse().map(e => 'Tập ' + (e.episode_no ?? e.no ?? e.EpisodeNo ?? ''));
            }

            setText('title', title);
            setText('bcTitle', title);
            setText('original', original ? '(' + original + ')' : '');
            setText('yearGenres', [year, genresText].filter(Boolean).join(' • '));
            setText('duration', normalizeDuration(data.duration_min, data.DurationMin));
            setText('episodeCount', normalizeEpisodeCount(data.episode_count, data.EpisodeCount));
            setText('status', data.status || '');
            setText('lang', data.language_name || data.language_code || '');
            setText('country', data.country_name || data.country_code || '');
            setText('genresText', genresText);
            setText('casts', castText);
            setText('rating', (data.rating ?? data.avg_rating ?? '').toString());
            setText('description', overview);
            setImg('poster', posterUrl);

            renderLatest(latest);

            const tags = ensureArray(data.tags);
            if (tags.length) {
                const wrap = document.getElementById('tagsWrap');
                if (wrap) {
                    wrap.innerHTML = '';
                    tags.forEach(t => {
                        const a = document.createElement('a');
                        a.href = '#';
                        a.className = 'chip';
                        const i = document.createElement('i');
                        i.className = 'bi bi-hash';
                        a.appendChild(i);
                        a.appendChild(document.createTextNode(' ' + t));
                        wrap.appendChild(a);
                    });
                }
            }
        } catch (err) {
            console.error('GetMovie error:', err);
        }
    }

    document.addEventListener('DOMContentLoaded', function () {
        getPreviewMovie();
    });
</script>
}

