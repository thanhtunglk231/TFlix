@{
    Layout = "/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Preview · Trang phim";

    // Trạng thái đăng nhập (ví dụ đọc từ Session)
    var token = Context.Session.GetString("JWToken");
    var isLoggedIn = !string.IsNullOrEmpty(token);

    // Demo data (fallback khi API chưa trả về)
    var poster = "https://image.tmdb.org/t/p/w500/4VlJYdVbLZ8uEytpNmBGG99nmCa.jpg";
    var title = "Tử Dạ Quy";
    var original = "Moonlit Reunion (2025)";
    var year = 2025;
    var country = "Trung Quốc";
    var genres = "Cổ Trang · Thần Thoại";
    var lang = "Phụ đề Việt";
    var duration = "45 phút / tập";
    var episodeCount = 38;
    var status = "Phim đang chiếu";
    var directors = "Kim Hoài";
    var casts = "Điền Hi Vi · Vương Giải Di · Chu Chính";
    var rating = 9.1;
    var description = @"Tử Dạ Quy kể về bên dưới Trường An có những bí ẩn huyền điều... Tất cả chỉ để giữ yên một phượng hoàng và thiên địa thái bình.";
    var tags = new[] { "cổ trang", "thần thoại", "tu tiên", "moonlit reunion" };
    var schedule = "2 tập mỗi tối trên Motchillvl.com";
}

@section Styles {
    <style>
        :root {
            --brand: #27d3c3;
            --brand2: #19b3a5;
            --panel: #12161a;
            --muted: #a9b7c4;
        }

        .wrap {
            background: #0e1114;
        }

        .crumb a {
            color: #cfdbe6;
            text-decoration: none
        }

            .crumb a:hover {
                color: #fff;
                text-decoration: underline
            }

        .panel {
            background: var(--panel);
            border: 1px solid rgba(255,255,255,.08);
            border-radius: 14px;
        }

        .panel-h {
            padding: .8rem 1rem;
            border-bottom: 1px solid rgba(255,255,255,.06);
            font-weight: 600
        }

        .panel-b {
            padding: 1rem;
        }

        .meta dt {
            color: #cfe7f6;
            width: 120px
        }

        .meta dd {
            color: #e8f3fb;
            margin-bottom: .4rem;
        }

        .star {
            color: #ffc107
        }

        .btn-grad {
            background: linear-gradient(135deg,var(--brand),var(--brand2));
            border: none
        }

        .chip {
            display: inline-flex;
            align-items: center;
            gap: .45rem;
            padding: .4rem .7rem;
            border-radius: 14px;
            background: #14181c;
            border: 1px solid rgba(255,255,255,.08);
            color: #dbe6ee;
            text-decoration: none
        }

            .chip i {
                color: var(--brand)
            }

            .chip:hover {
                border-color: var(--brand);
                color: #fff
            }

        .pill {
            background: #14181c;
            color: #e6f0f7;
            border: 1px solid rgba(255,255,255,.08);
            padding: .35rem .7rem;
            border-radius: 10px;
        }

            .pill:hover {
                border-color: var(--brand)
            }

        .slist .item {
            display: flex;
            gap: .6rem;
            padding: .5rem;
            border-radius: 10px
        }

            .slist .item:hover {
                background: #14181c
            }

        .thumb {
            width: 62px;
            height: 86px;
            border-radius: 8px;
            object-fit: cover
        }

        .cmt-head {
            display: flex;
            align-items: center;
            gap: .5rem
        }

            .cmt-head img {
                width: 36px;
                height: 36px;
                border-radius: 50%
            }

        .label {
            color: var(--muted)
        }
    </style>
}

